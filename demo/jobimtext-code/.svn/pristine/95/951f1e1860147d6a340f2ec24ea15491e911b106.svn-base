<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="dependencies" default="depend.org.jobimtext.examples.oss">
	<dirname property="dependencies.basedir" file="${ant.file.dependencies}" />
	<!-- ================================================================== -->
	
	
	<!-- ================================================================== -->
	<target name="depend.org.jobimtext" depends="depend.com.ibm.sai.distributional_similarity.api.lite">
		<ant dir="${dependencies.basedir}/../org.jobimtext" inheritAll="false" />
		<!-- Change the version in the hadoop script file -->
		<replaceregexp file="${dist}/generateHadoopScript.py" 
		  match="org.jobimtext.jar" replace="org.jobimtext-${version}.jar"/>
		<replaceregexp file="${dist}/generateHadoopScript.py" 
				  match="org.jobimtext.jar" replace="org.jobimtext-${version}.jar"/>
	</target>
	<!-- ================================================================== -->
	<target name="depend.com.ibm.sai.dca">
		<copy file="../com.ibm.sai.dca/jar/DCA_Framework_v1.0.jar" todir="${dist_jar}">
		</copy>
	</target> 
	<!-- ================================================================== -->
	<target name="depend.com.ibm.bluej.util">
		<ant dir="${dependencies.basedir}/../com.ibm.bluej.util" inheritAll="false" />
	</target>
	<!-- ================================================================== -->
		<target name="depend.com.ibm.sai.distributional_similarity.api.lite">
			<ant dir="${dependencies.basedir}/../com.ibm.sai.distributional_similarity.api.lite" inheritAll="false" />
		</target>
	<!-- ================================================================== -->
	<target name="depend.crf" depends="depend.com.ibm.bluej.util">
		<ant dir="${dependencies.basedir}/../crf" inheritAll="false" />
	</target>
	<!-- ================================================================== -->
		<target name="depend.org.jobimtext.thirdparty" depends="depend.org.jobimtext" >
			<ant dir="${dependencies.basedir}/../org.jobimtext.thirdparty" inheritAll="false" />
		</target>
	<!-- ================================================================== -->
	<!-- the example projects builts all other projects -->
	<!-- ================================================================== -->
	<target name="depend.org.jobimtext.examples.oss" depends="depend.com.ibm.sai.dca, depend.org.jobimtext.thirdparty,depend.org.jobimtext,depend.com.ibm.bluej.util, depend.crf">
		<ant dir="${dependencies.basedir}/../org.jobimtext.examples.oss" inheritAll="false" />
		<!-- Change the version in the addToMaven script file -->
		<replaceregexp file="${dist}/addJarsToMaven.sh" 
				  match="VERSION" replace="${version}" flags="g"/>
	</target>
	

</project>