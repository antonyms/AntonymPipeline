<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project basedir="." default="ComputeSimilarity" name="org.jobimtext">

	<property name="xargs" value="" />

	<path id="org.jobimtext.classpath">
		<pathelement location="HADOOP_CONFIGURATION" />
		<!--<pathelement location="../org.jobimtext/lib/hadoop-0.20.0-core.jar" />-->
		<pathelement location="../org.jobimtext.thirdparty/lib/hadoop-common-2.0.0-mr1-cdh4.5.0.jar" />
		<pathelement location="../org.jobimtext.thirdparty/lib/hadoop-core-2.0.0-mr1-cdh4.5.0.jar" />
		<pathelement location="../org.jobimtext.thirdparty/lib/pig-0.10.0.jar" />
		<pathelement location="../org.jobimtext.thirdparty/lib/commons-cli-1.2.jar" />
		<pathelement location="../org.jobimtext.thirdparty/lib/commons-logging.jar" />
		<pathelement location="../org.jobimtext.thirdparty/lib/commons-httpclient-3.1-rc1.jar" />
		<pathelement location="../org.jobimtext.thirdparty/lib/log4j-1.2.15.jar" />
		<pathelement location="../org.jobimtext/jobimtext.jar" />
	</path>

	<target name="ComputeSimilarity" depends="BuildJar">
		<java classname="org.jobimtext.hadoop.ComputeSimilarity" failonerror="true" fork="yes">
			<jvmarg line="${xargs}" />
			<arg line="${args}" />
			<classpath refid="org.jobimtext.classpath" />
		</java>
	</target>

	<target name="ComputeSimilarityIndexed" depends="BuildJar">
		<java classname="org.jobimtext.hadoop.ComputeSimilarityIndexed" failonerror="true" fork="yes">
			<jvmarg line="${xargs}" />
			<arg line="${args}" />
			<classpath refid="org.jobimtext.classpath" />
		</java>
	</target>

	<target name="BuildJar">
		<delete file="jobimtext_dt.jar" />
		<jar destfile="jobimtext_dt.jar" basedir="bin" />
	</target>

</project>